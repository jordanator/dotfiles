# Start DWM Bar
# /home/lalith/.local/src/dwm-bar/dwm_bar.sh &
/home/lalith/.dwm/bar/bar.sh &

# nm-applet
nm-applet --indicator &

# Bluetooth
blueman-applet &

# Optimus Manager
# optimus-manager-qt &

# Auto mount external devices
udiskie &

# Starting compositor
picom -b

# Stop screen from going blank
xset s off
xset -dpms
xset s noblank

# Faster key repeat and delay => laptop keyboard
xset r rate 210 40

# Faster key repeat and delay => external keyboard
#xset r rate 150 20

# Notification center
dunst &

# Volume tray
pasystray --notify=all &

# Hide Cursor when typing
xbanish &

# Open flameshot on startup
flameshot &

# Open Slack
# slack &

# teams
# teams &

# Element
# element-desktop &

# Open CopyQ
copyq &

# Wallpaper
feh --bg-fill --randomize ~/Pictures/wallpapers/* &

# Save your eyes
redshift-gtk -l 17.4545951:78.5527655 &

# Syncthing
# syncthing &

export LANG=en_US.UTF-8

export EDITOR="lvim"
export TERMINAL="alacritty"
export BROWSER="brave"

export PATH=$PATH:~/.local/bin

# XDG Paths
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# zsh config dir
export ZDOTDIR=$HOME/.config/zsh

# remap caps to escape
# setxkbmap -option caps:escape

# load Xresources
# xrdb ~/.Xresources
xrdb merge ~/.Xresources

